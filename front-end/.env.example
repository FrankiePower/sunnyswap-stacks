# Network configuration
NEXT_PUBLIC_STACKS_NETWORK=devnet

# "platform" when running devnet in Hiro platform, "local" when running devnet locally
NEXT_PUBLIC_DEVNET_HOST=platform

NEXT_PUBLIC_PLATFORM_HIRO_API_KEY=XXXX

# WalletConnect (required for EVM wallet connections)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# App URL for API calls
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Redis configuration
REDIS_URL=redis://localhost:6379

# Resolver bot configuration (server-side only)
RESOLVER_PRIVATE_KEY=your_resolver_private_key

SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/api_key
