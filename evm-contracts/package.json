{
  "name": "evm-contracts",
  "version": "1.0.0",
  "type": "module",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.3",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@types/node": "^22.18.10",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.7",
    "typescript": "~5.8.0",
    "viem": "^2.38.2"
  },
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:integration": "hardhat test test/integration.test.ts",
    "deploy:factory": "hardhat ignition deploy ignition/modules/STXEscrowFactory.ts --network sepolia",
    "deploy:factory:local": "hardhat ignition deploy ignition/modules/STXEscrowFactory.ts --network localhost",
    "deploy:factory:verify": "hardhat ignition deploy ignition/modules/STXEscrowFactory.ts --network sepolia --verify",
    "deploy:resolver": "hardhat ignition deploy ignition/modules/Resolver.ts --network sepolia",
    "deploy:resolver:local": "hardhat ignition deploy ignition/modules/Resolver.ts --network localhost",
    "deploy:resolver:verify": "hardhat ignition deploy ignition/modules/Resolver.ts --network sepolia --verify",
    "deploy:all": "hardhat ignition deploy ignition/modules/Resolver.ts --network sepolia",
    "deploy:all:local": "hardhat ignition deploy ignition/modules/Resolver.ts --network localhost",
    "deploy": "hardhat run evm/scripts/deploy-btc.ts --network sepolia",
    "maker:create": "hardhat run evm/scripts/create-order-immediate.ts --network sepolia",
    "taker:fill": "hardhat run evm/scripts/fill-order.ts --network sepolia",
    "maker:escrow": "hardhat run evm/scripts/maker-escrow.ts --network sepolia",
    "taker:fund": "hardhat run evm/scripts/taker-fund-htlc-real.ts --network sepolia",
    "maker:claim": "hardhat run evm/scripts/maker-claim-btc.ts --network sepolia",
    "taker:claim": "hardhat run evm/scripts/taker-claim-eth.ts --network sepolia",
    "reverse:create": "hardhat run reverse/create-order-reverse.ts --network sepolia",
    "reverse:taker:escrow": "hardhat run reverse/taker-escrow-reverse.ts --network sepolia",
    "reverse:maker:htlc": "hardhat run reverse/maker-htlc-reverse.ts --network sepolia",
    "reverse:maker:fund": "hardhat run reverse/maker-fund-htlc-reverse.ts --network sepolia",
    "reverse:maker:claim": "hardhat run reverse/maker-claim-eth-reverse.ts --network sepolia",
    "reverse:taker:claim": "hardhat run reverse/taker-claim-btc-reverse.ts --network sepolia"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0"
  }
}
